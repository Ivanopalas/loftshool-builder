mixin section-title(title, img)
  .main-title
    h4.main-title__title #{title}
    p.main-title__centered
      img(src='/assets/img/'+ img alt='my-photo').main-title__photo

mixin skillsTable(title, skill1, skill2, skill3)
  .tabs__subtitle #{title}
  table.admin-table
    tr
      td.admin-table__col1 #{skill1}
      td.admin-table__col2: input(type = 'text')
      td %
    tr
      td.admin-table__col1 #{skill2}
        td.admin-table__col2: input(type ='text')
        td %
    tr
      td.admin-table__col1 #{skill3}
      td.admin-table__col2: input(type = 'text')
      td %

mixin circle-progress(percent)
  .circle-progress(class!=attributes.class data-percent=percent)
    svg(height="100%" width="100%").circle-progress__svg
      circle(cx='50%' cy='50%' r='50%').circle-progress__circle.circle-progress__circle_path
      circle(cx='50%' cy='50%' r='50%').circle-progress__circle.circle-progress__circle_fill
    if block
      span.circle-progress__n
        block